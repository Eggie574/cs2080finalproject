{
    "compilerOptions": {
        "experimentalDecorators": true,
        "strict": true,
        "paths": {
            "*": [
                "*",
                "types/*",
                "gi-types/*"

            ]
         
        },
        "target": "ES2018",
        "baseUrl": ".",
        "moduleResolution": "node",
        "module": "CommonJS",
        "outDir": "_build",
        "lib": [
            "es2017"
        ],
        "skipLibCheck": true,
        "typeRoots": [
            "types",
            "gi-types",
        ],
        "allowJs": true, 
        "declaration": true,                              /* Generate .d.ts files from TypeScript and JavaScript files in your project. */
        "declarationMap": true,                           /* Create sourcemaps for d.ts files. */
        "sourceMap": true,
        "preserveSymlinks": true,
        "moduleDetection": "auto", 
        
    
    },
    "include": [
        "gi-types/gi.d.ts",
        "@girs/node-gio-2.0",
        "types/ambient.d.ts",
        "types/executeJavascript.d.ts",         // file for javascript
        "src/*",
    ],
    "exclude": [
        "node_modules/@types/**"       
    ],
}

